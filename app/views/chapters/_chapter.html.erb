<article id="<%= dom_id chapter %>" class="w-full max-w-4xl mx-auto my-8 bg-white shadow-lg rounded-lg overflow-hidden">
  <!-- Header Image -->
  <% if chapter.image_header.attached? %>
    <div class="w-full h-64 bg-gray-200">
      <%= image_tag chapter.image_header, class: "w-full h-full object-cover", alt: chapter.title %>
    </div>
  <% end %>
  
  <!-- Chapter Header -->
  <header class="px-8 py-6 bg-gradient-to-r from-gray-50 to-white border-b">
    <div class="flex items-center justify-between">
      <div class="flex-1">
        <div class="flex items-center gap-4 mb-2">
          <% if chapter.intro_chapter? %>
            <span class="bg-gradient-to-r from-purple-600 to-blue-600 text-white px-4 py-2 rounded-full text-sm font-bold">
              Introduction
            </span>
          <% else %>
            <span class="bg-gradient-to-r from-purple-600 to-blue-600 text-white px-4 py-2 rounded-full text-sm font-bold">
              Chapter <%= chapter.chapter_number %>
            </span>
          <% end %>
        </div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= chapter.title %></h1>
        <% if chapter.subtitle.present? %>
          <h2 class="text-xl text-gray-600 font-medium"><%= chapter.subtitle %></h2>
        <% end %>
      </div>
      
      <!-- PDF Download Icon -->
      <div class="flex-shrink-0 ml-4">
        <%= link_to "#", class: "bg-blue-600 hover:bg-blue-500 text-white p-2 rounded-full transition-colors shadow-lg",
            title: "Download this chapter as PDF",
            onclick: "alert('PDF export functionality coming soon! This will download this chapter as a PDF.'); return false;" do %>
          <svg style="width: 12px; height: 12px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        <% end %>
      </div>
    </div>
  </header>
  
  <!-- Chapter Content -->
  <div class="px-8 py-6">
    <div class="prose prose-lg max-w-none text-gray-800 leading-relaxed">
      <%= chapter.content %>
    </div>
  </div>
</article>
